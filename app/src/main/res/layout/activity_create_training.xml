<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTraining"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="bottom">

    <TextView
        android:id="@+id/activity_create_training_txt"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/create_training_title"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_create_training_Entrainement_txt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginStart="10sp"
        android:layout_marginTop="60dp"
        android:autofillHints="@string/created_training_name"
        android:textColor="#808080"
        android:textSize="20sp"
        android:inputType="text"
        android:text="@string/created_training_name"
        android:textStyle="bold"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/activity_create_training_2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:text="@string/created_training_speed"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/activity_main_menu_new_training_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="136sp"
        android:layout_height="50dp"
        android:background="#008000"
        android:text="@string/create_training_speed_slow"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_main_menu_new_training_button1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="136sp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:text="@string/create_training_speed_moderate"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_new_training_button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="137sp"
            android:layout_height="50dp"
            android:background="#FF0000"
            android:text="@string/create_training_speed_fast"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/activity_create_training_3_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/create_training_resistance"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="70sp">

        <Button
            android:id="@+id/activity_main_menu_new_training_button3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="136sp"
            android:layout_height="50dp"
            android:background="#008000"
            android:text="@string/create_training_resistance_low"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_new_training_button4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="136sp"
            android:layout_height="50dp"
            android:background="#FFA500"
            android:text="@string/create_training_resistance_medium"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_new_training_button5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="137sp"
            android:layout_height="50dp"
            android:background="#FF0000"
            android:text="@string/create_training_resistance_hard"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/activity_main_menu_new_training_button6"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="137sp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/button_next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>


