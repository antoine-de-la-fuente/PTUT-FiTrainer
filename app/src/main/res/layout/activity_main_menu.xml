<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainMenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225sp"
            android:gravity="center"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_main_menu_welcome_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/welcome_title"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_main_menu_greetings_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/welcome_greetings"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_main_menu_new_training_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/fitrainer_blue"
            android:text="nouvel entraînement"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_create_training_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#156BAA"
            android:text="création"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_history_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#0B3555"
            android:text="historique"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_stats_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/black"
            android:text="Statistiques globales"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_main_menu_logout_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#B31B10"
            android:text="déconnexion"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

</LinearLayout>

