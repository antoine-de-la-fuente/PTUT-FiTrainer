<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FiTrainer" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fitrainer_blue</item>
        <item name="colorSecondaryVariant">@color/fitrainer_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="EditText.OverallStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">64sp</item>
        <item name="android:layout_marginEnd">64sp</item>
    </style>
    <style name="Button.Borderless.OverallStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextView.SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="TextView.Labels" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="Widget.AppCompat.TextView.AppTitle" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/fitrainer_blue</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Widget.AppCompat.TextView.Countdown" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">128sp</item>
    </style>
</resources>